
def build():
    target = "fawm"
    sources = "main.c"
    cflags = ["-Wall", "-Werror", "-O3", "-g"]
    includes = ["/usr/local/include", "/usr/local/include/freetype2"]
    lib = ["X11", "Xft"]
    libpath = "/usr/local/lib"
    program(**locals())

